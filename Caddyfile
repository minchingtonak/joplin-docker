{$DOMAIN}:443 {
  log {
    level INFO
    output file {$LOG_FILE} {
      roll_size 10MB
      roll_keep 10
    }
  }

  # Use the ACME HTTP-01 challenge to get a cert for the configured domain.
  tls {$EMAIL}

  redir {$SUBPATH} {$SUBPATH}/ permanent

  handle {$SUBPATH}/* {
    reverse_proxy joplin:22300
  }

  handle {
    respond "Access Denied" 403 {
      close
    }
  }
}
